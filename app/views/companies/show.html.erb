<%- model_class = Company -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nimi) %>:</strong></dt>
  <dd><%= @company.nimi %></dd>
  <dt><strong><%= model_class.human_attribute_name(:kayntiosoite) %>:</strong></dt>
  <dd><%= @company.kayntiosoite %></dd>
  <dt><strong><%= model_class.human_attribute_name(:laskutusosoite) %>:</strong></dt>
  <dd><%= @company.laskutusosoite %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ytunnus) %>:</strong></dt>
  <dd><%= @company.ytunnus %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              companies_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_companies_path(@company), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              companies_path(@company),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
